<!-- This is the page that displays all of the events. It has search functionality by a few different
 things (name, date, type, etc). Admin can add, edit, and delete. -->


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Events</title>
</head>
<body class="bg-light">
    <%- include('components/navbar') %>

    <main class="container-fluid px-3 px-md-4">
        <div class="row g-4">
            <% if (session.person?.role === 'admin') { %>
                <div class="col-12">
                    <div class="accordion mt-4" id="eventsAccordion">
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingAddEvent">
                                <button class="accordion-button bg-danger-subtle text-danger-emphasis" type="button" data-bs-toggle="collapse" data-bs-target="#collapseAddEvent" aria-expanded="false" aria-controls="collapseAddEvent">
                                    Add Event
                                </button>
                            </h2>
                            <div id="collapseAddEvent" class="accordion-collapse collapse" aria-labelledby="headingAddEvent" data-bs-parent="#eventsAccordion">
                                <div class="accordion-body">
                                    <%- include('components/events-add-event') %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>

            <div class="col-12">
                <div class="card shadow-sm mt-4 mt-md-0">
                    <div class="card-body">
                        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
                            <div class="d-flex align-items-center gap-2">
                                <h2 class="h4 mb-0">Events</h2>
                                <% if (eventinstances?.length) { %>
                                    <span class="badge bg-danger-subtle text-danger-emphasis"><%= eventinstances.length %></span>
                                <% } %>
                            </div>
                            <% if (eventinstances?.length) { %>
                                <a href="/events/events" class="btn btn-outline-secondary btn-sm">Clear Filters</a>
                            <% } %>
                        </div>

                        <% if (eventinstances?.length) { %>
                            <div class="row g-3 mb-4">
                                <div class="col-12 col-md-6 col-lg-3">
                                    <%- include('components/events-date') %>
                                </div>
                                <div class="col-12 col-md-6 col-lg-3">
                                    <%- include('components/events-eventname', { eventinstances }) %>
                                </div>
                                <div class="col-12 col-md-6 col-lg-3">
                                    <%- include('components/events-eventlocation', { eventinstances }) %>
                                </div>
                                <div class="col-12 col-md-6 col-lg-3">
                                    <%- include('components/events-eventtype', { eventinstances }) %>
                                </div>
                            </div>

                            <%- include('components/events-table', { eventinstances, currentUser: session.person }) %>
                        <% } else { %>
                            <div class="alert alert-warning mb-0" role="alert">
                                No events found in the database.
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <script>
        function handleEventFilter(submitEvent, elementId, basePath) {
            submitEvent.preventDefault();
            const element = document.getElementById(elementId);

            if (!element) {
                return false;
            }

            const value = element.value;

            if (!value) {
                return false;
            }

            window.location.href = `${basePath}${encodeURIComponent(value)}`;
            return false;
        }
    </script>
</body>
</html>