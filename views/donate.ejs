  <!-- Fonts: DM Serif Display, Montserrat; script fallback (TT Milk Script not on Google Fonts) -->
  <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;600;700&family=Great+Vibes&display=swap" rel="stylesheet">
  <style>
    :root{
      --c1: #99B7C6;
      --c2: #978EC4;
      --c3: #F9F5EA;
      --c4: #FFD8D1;
      --c5: #F9AFB1;
      --c6: #9AB59D;
      --c7: #3A3F3B;
      --c8: #F4B092;
      --c9: #CE325B;
      --radius: 14px;
    }

    /* Font stack: prefer exact fonts when available; TT Milk Script may be local - 'Great Vibes' used as graceful fallback */
    body{font-family: 'Montserrat', system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial; background: linear-gradient(180deg,var(--c3) 0%, rgba(153,183,198,0.06) 100%); color: var(--c7); padding-top: 72px;}
    .site-title{font-family: 'DM Serif Display', serif; font-size: clamp(2.2rem, 3.8vw, 4rem); letter-spacing: .6px; color: var(--c2);}
    .nav-brand-title{font-family: 'DM Serif Display', serif; font-size: 1.25rem; color: var(--c2);}
    .accent-script{font-family: 'TT Milk Script', 'Great Vibes', cursive; color: var(--c9);}

    .donation-card{background: linear-gradient(180deg, rgba(255,216,209,0.9), rgba(249,245,234,0.95)); border-radius: var(--radius); box-shadow: 0 8px 30px rgba(58,63,59,0.12); border: 1px solid rgba(152,142,196,0.08);}
    .donation-card .card-body{padding: 2rem;}

    .hero-sub{font-size: 1.125rem; color: rgba(58,63,59,0.85); font-weight: 500}
    .lead-accent{color: var(--c6); font-weight:600}

    .form-label{font-weight:600; color:var(--c7)}
    .form-control:focus{box-shadow: 0 0 0 .15rem rgba(151,142,196,0.18); border-color: var(--c2)}
    .btn-primary-custom{background: linear-gradient(90deg,var(--c2),var(--c9)); border: none; color: white; font-weight:700; border-radius: 10px; padding: .65rem 1.25rem}
    .btn-outline-custom{border-color: rgba(58,63,59,0.08); color: var(--c7); background: transparent}

    .donation-amount{font-family: 'DM Serif Display', serif; font-size: 1.6rem; color:var(--c7)}

    /* small responsive tweaks */
    @media (min-width: 992px){
      .donation-card{padding: 1rem 1.25rem}
    }

    .tiny-muted{font-size:.9rem; color: rgba(58,63,59,0.65)}
  </style>
</head>
