<!-- This is the page that displays all milestones achieved. Normal participants are allowed to
 see it, but only admin are able to add, edit, delete, etc.   -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Milestones</title>
</head>
<body class="bg-light">
  <%- include('components/navbar') %>

  <main class="container-fluid px-3 px-md-4">
    <div class="row g-4">
      <% if (session.person?.role === 'admin') { %>
        <div class="col-12">
          <div class="accordion mt-4" id="milestonesAccordion">
            <div class="accordion-item">
              <h2 class="accordion-header" id="headingAddMilestone">
                <button class="accordion-button bg-danger-subtle text-danger-emphasis" type="button" data-bs-toggle="collapse" data-bs-target="#collapseAddMilestone" aria-expanded="false" aria-controls="collapseAddMilestone">
                  Add Milestone
                </button>
              </h2>
              <div id="collapseAddMilestone" class="accordion-collapse collapse" aria-labelledby="headingAddMilestone" data-bs-parent="#milestonesAccordion">
                <div class="accordion-body">
                  <%- include('components/milestones-add-milestone') %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% } %>

      <div class="col-12">
        <div class="card shadow-sm mt-4 mt-md-0">
          <div class="card-body">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
              <div class="d-flex align-items-center gap-2">
                <h2 class="h4 mb-0">Milestones</h2>
                <% if (milestones?.length) { %>
                  <span class="badge bg-danger-subtle text-danger-emphasis"><%= milestones.length %></span>
                <% } %>
              </div>
              <% if (session.person?.role === 'admin' && milestones?.length) { %>
                <a href="/milestones/milestones" class="btn btn-outline-secondary btn-sm">Clear Filters</a>
              <% } %>
            </div>

            <% if (milestones?.length) { %>
              <div class="row g-3 mb-4">
                <div class="col-12 col-md-6 col-lg-4">
                  <%- include('components/milestones-email') %>
                </div>
                <div class="col-12 col-md-6 col-lg-4">
                  <%- include('components/milestones-milestonedate') %>
                </div>
              </div>

              <%- include('components/milestones-table', { milestones, currentUser: session.person }) %>
            <% } else { %>
              <div class="alert alert-warning mb-0" role="alert">No milestones found in the database.</div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </main>

  <script>
    function handleMilestoneFilter(submitEvent, elementId, basePath) {
      submitEvent.preventDefault();
      const element = document.getElementById(elementId);

      if (!element) {
        return false;
      }

      const value = element.value;

      if (!value) {
        return false;
      }

      window.location.href = `${basePath}${encodeURIComponent(value)}`;
      return false;
    }
  </script>
</body>
</html>