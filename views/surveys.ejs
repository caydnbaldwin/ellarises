<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Surveys</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;600;700&display=swap" rel="stylesheet">
  <style>
    :root{
      --c2: #978EC4;
      --c7: #3A3F3B;
    }
    html, body { height: 100%; }
    body { overflow: hidden; font-family: 'Montserrat', system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial; }
    /* Keep table header visible while scrolling inside card */
    .surveys-table thead th { position: sticky; top: 0; z-index: 2; background-color: var(--bs-body-bg); }
    .page-title{font-family:'DM Serif Display',serif; color:var(--c2)}
  </style>
</head>

<body>


<!-- Brings in the navbar from the components directory -->
  <%- include('components/navbar') %>
  <main class="container-fluid px-3 px-md-4 vh-100 d-flex flex-column">
    <div class="py-3">
      <div class="d-flex align-items-baseline justify-content-between gap-3 mb-2">
        <h1 class="h3 m-0 page-title">Surveys</h1>
        <% if (surveys && surveys.length) { %>
          <div class="text-secondary fs-6"><%= surveys.length %> records</div>
        <% } %>
      </div>
    </div>

    <% if (surveys.length===0) { %>
      <div class="flex-grow-1 d-flex align-items-center justify-content-center px-3">
        <div class="alert alert-warning m-0 shadow-sm" role="alert">
          No surveys found in the database.
        </div>
      </div>
    <% } else { %>
      <div class="card shadow-sm flex-grow-1 d-flex flex-column h-50 overflow-auto">
        <div class="card-header bg-white">
          <div class="d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-baseline gap-2">
              <span class="fw-semibold">Survey Records</span>
              <% if (surveys && surveys.length) { %>
                <span class="badge text-bg-secondary"><%= surveys.length %></span>
              <% } %>
            </div>
          </div>
        <% if (person.role ==="admin" ) {%>
            <!-- <%// include('components/surveys-addsurvey') %> -->
            <div class="text-end mt-2">
                <a href="/surveys/surveys" class="btn btn-outline-secondary btn-sm">Clear</a>
            </div>
        <%}%>
          <div class="mt-2">
            <div class="row g-2">
              <div class="col-12 col-lg-4">
                <%- include('components/surveys-email') %>
              </div>
              <div class="col-12 col-lg-4">
                <%- include('components/surveys-eventname') %>
              </div>
              <div class="col-12 col-lg-4">
                <%- include('components/surveys-eventtype') %>
              </div>
            </div>
          </div>
        </div>
        <!-- <div class="card-body p-0 overflow-auto d-flex justify-content-center"> -->
        <div class="card-body p-0 overflow-auto">
          <div class="table-responsive">
            <br><%- include('components/surveys-table') %>
          </div>
        </div>
      </div>
    <% } %>
  </main>
  <script>
    async function deleteSurvey(personId, eventStart, eventId) {
      if (!confirm('Are you sure you want to delete this survey?')) {
        return;
      }
      try {
        const response = await fetch(`/surveys/delete/${personId}/${eventStart}/${eventId}`, {
          method: 'DELETE'
        });
        if (response.ok) {
          throw new Error('Failed to delete survey.');
        };
        window.location.reload();
      } catch (error) {
        console.error(error);
        alert(error.message);
      }
    };
  </script>
</body>

</html>