<!-- This is the page that shows all donations. It shows the first and last names of donors and 
 the date and amount -->


<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Donations</title>
</head>
<body class="bg-light">
  <%- include('components/navbar') %>

  <main class="container-fluid px-3 px-md-4">
    <div class="row g-4">
      <div class="col-12">
        <div class="card shadow-sm mt-4">
          <div class="card-body">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
              <div class="d-flex align-items-center gap-2">
                <h2 class="h4 mb-0">Donations</h2>
                <% if (donations?.length) { %>
                  <span class="badge bg-danger-subtle text-danger-emphasis"><%= donations.length %></span>
                <% } %>
              </div>
            </div>

            <% if (donations?.length) { %>
              <%- include('components/donations-table', { donations }) %>
            <% } else { %>
              <div class="alert alert-warning mb-0" role="alert">No donations found.</div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </main>
</body>
</html>