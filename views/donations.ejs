<!-- This is the page that shows all donations. It shows the first and last names of donors and 
 the date and amount -->


<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>Donations Maintenance</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
    crossorigin="anonymous">
  <link
    href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;600;700&display=swap"
    rel="stylesheet">
  <style>
    :root {
      --c2: #978EC4;
    }

    body {
      font-family: 'Montserrat', system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial
    }

    .page-title {
      font-family: 'DM Serif Display', serif;
      color: var(--c2)
    }

    .action-cell form input[type="submit"],
    .action-cell button {
      padding: .25rem .5rem;
      border-radius: .375rem;
      border: 1px solid rgba(0, 0, 0, .125);
      background: #fff;
    }

    .action-cell button {
      border-color: #dc3545;
      color: #dc3545;
      background: transparent
    }
  </style>
</head>

<body class="bg-light">
  <%- include('components/navbar') %>
    <main class="container-fluid px-3 px-md-4 py-4">
      <div class="d-flex justify-content-between align-items-baseline mb-3">
        <h1 class="h3 m-0 page-title">Donations</h1>
      </div>
      <div class="card shadow-sm">
        <div class="card-body">
          <% if (donations && donations.length) { %>
            <%- include('components/donations-table', {person: session.person, donations: donations}) %>
          <% } else { %>
            <div class="alert alert-info mb-0">No donations found.</div>
            <% } %>
        </div>
      </div>
    </main>
</body>
</html>