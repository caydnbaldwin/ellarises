<div class="table-responsive">
  <table class="table table-striped table-hover align-middle">
    <thead class="table-light">
    <tr>
      <th scope="col">Person ID</th>
      <th scope="col">Email</th>
      <th scope="col">Password</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Date Of Birth</th>
      <th scope="col">Role</th>
      <th scope="col">Phone</th>
      <th scope="col">City</th>
      <th scope="col">State</th>
      <th scope="col">Zip Code</th>
      <th scope="col">Organization</th>
      <th scope="col">Field of Interest</th>
      <th scope="col">Total Donations</th>
      <th scope="col" class="text-center">Edit</th>
      <th scope="col" class="text-center">Delete</th>
    </tr>
    </thead>
    <tbody>
    <% for (person of persons) { %>
      <tr>
        <td>
          <%= person.personid %>
        </td>
        <td>
          <%= person.email %>
        </td>
        <td>
          <%= person.password %>
        </td>
        <td>
          <%= person.firstname %>
        </td>
        <td>
          <%= person.lastname %>
        </td>
        <td>
          <%= new Date(person.dateofbirth).toLocaleDateString() %>
        </td>
        <td>
          <%= person.role %>
        </td>
        <td>
          <%= person.phone %>
        </td>
        <td>
          <%= person.city %>
        </td>
        <td>
          <%= person.state %>
        </td>
        <td>
          <%= person.zipcode %>
        </td>
        <td>
          <%= person.organization %>
        </td>
        <td>
          <%= person.fieldofinterest %>
        </td>
        <td>
          <%= person.totaldonations %>
        </td>
        <td class="text-center">
          <form action="/persons/mi/<%= person.personid%>" method="GET" class="d-inline">
            <button type="submit" class="btn btn-sm btn-outline-primary">Edit</button>
          </form>
        </td>
        <td class="text-center">
          <button class="btn btn-sm btn-outline-danger" onclick="deletePerson('<%= person.personid %>')">Delete</button>
        </td>
      </tr>
    <% } %>
    </tbody>
  </table>
</div>