<style>
  :root {
    --color-blue: #99B7C6;
    --color-purple: #978EC4;
    --color-cream: #F9F5EA;
    --color-pink-light: #FFD8D1;
    --color-pink: #F9AFB1;
    --color-green: #9AB59D;
    --color-dark: #3A3F3B;
    --color-peach: #F4B092;
    --color-rose: #CE325B;
  }
</style>

<nav class="navbar navbar-expand-lg shadow-sm" style="background-color: var(--color-cream);">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">
      <img src="/logo.png" alt="Ella Rises" height="100">
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link fs-3" href="/" style="color: var(--color-dark);">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link fs-3" href="/donations/donate" style="color: var(--color-dark);">Donate</a>
        </li>
        <% if (user) { %>
          <li class="nav-item">
            <a class="nav-link fs-3" href="/persons/participants" style="color: var(--color-dark);">Participants</a>
          </li>
          <li class="nav-item">
            <a class="nav-link fs-3" href="/events/events" style="color: var(--color-dark);">Events</a>
          </li>
          <li class="nav-item">
            <a class="nav-link fs-3" href="/surveys/surveys" style="color: var(--color-dark);">Surveys</a>
          </li>
          <li class="nav-item">
            <a class="nav-link fs-3" href="/milestones/milestones" style="color: var(--color-dark);">Milestones</a>
          </li>
          <li class="nav-item">
            <a class="nav-link fs-3" href="/donations/donations" style="color: var(--color-dark);">Donations</a>
          </li>
          <% if (user.role === 'admin') { %>
            <li class="nav-item">
              <a class="nav-link fs-3" href="/persons/user" style="color: var(--color-dark);">Users</a>
            </li>
          <% } %>
          <li class="nav-item">
            <a class="nav-link fs-3" href="/persons/logout" style="color: var(--color-rose);">Logout</a>
          </li>
        <% } else { %>
          <li class="nav-item">
            <a class="nav-link fs-3" href="/persons/login" style="color: var(--color-dark);">Login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link fs-3" href="/persons/signup" style="color: var(--color-rose);">Get Started</a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>
