<link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;600;700&family=Great+Vibes&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
  :root {
    --color-blue: #99B7C6;
    --color-purple: #978EC4;
    --color-cream: #F9F5EA;
    --color-pink-light: #FFD8D1;
    --color-pink: #F9AFB1;
    --color-green: #9AB59D;
    --color-dark: #3A3F3B;
    --color-peach: #F4B092;
    --color-rose: #CE325B;
  }

  .navbar .dropdown-item {
    color: var(--color-dark);
  }

  .navbar .dropdown-item:hover,
  .navbar .dropdown-item:focus {
    color: var(--color-peach);
    background-color: transparent;
  }

  .navbar .nav-link {
    color: var(--color-dark);
  }

  .navbar .nav-link:hover,
  .navbar .nav-link:focus {
    color: var(--color-peach);
  }
</style>

<nav class="navbar navbar-expand-lg shadow-sm" style="background-color: var(--color-cream); font-family: 'Montserrat', system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial;">
  <div class="container-fluid">
    <!-- Ella Rises Logo -->
    <a class="navbar-brand" href="/">
      <img src="/compressed/logo.webp" alt="Ella Rises" height="100">
    </a>
    
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto align-items-center">
        <!-- Donate -->
        <li class="nav-item">
          <a class="nav-link fs-5 px-3" href="/donations/donate">Donate</a>
        </li>
        
        <!-- Profile Icon Dropdown -->
        <% if (typeof person !== 'undefined' && person) { %>
          <li class="nav-item dropdown">
            <a class="nav-link fs-5 px-3" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="fas fa-user-circle fa-2x"></i>
            </a>
            <ul class="dropdown-menu dropdown-menu-end" style="background-color: var(--color-cream);" aria-labelledby="profileDropdown">
              <li><a class="dropdown-item" href="/persons/mi/<%= person.personid %>">Profile</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item text-danger" href="/persons/logout">Logout</a></li>
            </ul>
          </li>
        <% } else { %>
          <li class="nav-item">
              <a class="nav-link fs-5 px-3" href="/persons/login">Login</a>
          </li>
        <% } %>
        
        <!-- Hamburger Icon Dropdown -->
        <li class="nav-item dropdown">
            <a class="nav-link fs-5 px-3" href="#" id="hamburgerDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fas fa-bars"></i>
          </a>
          <ul class="dropdown-menu dropdown-menu-end" style="background-color: var(--color-cream);" aria-labelledby="hamburgerDropdown">
            <li><a class="dropdown-item" href="/donations/donations">Donations</a></li>
            <li><a class="dropdown-item" href="/events/events">Events</a></li>
            <li><a class="dropdown-item" href="/milestones/milestones">Milestones</a></li>
            <li><a class="dropdown-item" href="/persons/persons">Participants</a></li>
            <li><a class="dropdown-item" href="/surveys/surveys">Surveys</a></li>
          </ul>
        </li>
        
      </ul>
    </div>
  </div>
</nav>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const dropdowns = document.querySelectorAll('.nav-item.dropdown');

    dropdowns.forEach(function (el) {
      const toggle = el.querySelector('[data-bs-toggle="dropdown"]');

      const dropdown = new bootstrap.Dropdown(toggle, {
        popperConfig(defaultConfig) {
          return {
            ...defaultConfig,
            placement: 'bottom-end', // Prefer aligning to the right
            modifiers: [
              ...(defaultConfig.modifiers || []),
              { name: 'preventOverflow', options: { boundary: 'viewport' } },
              { name: 'flip', options: { fallbackPlacements: ['left-start', 'bottom-start'] } }
            ]
          };
        }
      });

      // Optional: hover behavior on desktop
      el.addEventListener('mouseenter', () => {
        if (window.innerWidth >= 992) dropdown.show();
      });
      el.addEventListener('mouseleave', () => {
        if (window.innerWidth >= 992) dropdown.hide();
      });
    });
  });
</script>
