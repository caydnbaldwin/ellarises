<div class="overflow-auto" style="max-height: 65vh;">
  <div class="table-responsive">
<table class="table table-hover align-middle mb-0 events-table w-auto mx-auto">
  <thead class="bg-danger-subtle text-danger-emphasis">
    <tr>
      <th scope="col">Event Name</th>
      <th scope="col">Event Type</th>
      <th scope="col">Event Date</th>
      <th scope="col">Event Location</th>
      <% if (session.person.role ==="admin" ) {%>
        <th scope="col" class="text-end" style="width:180px;">Actions</th>
      <%}%>
    </tr>
  </thead>
  <tbody>
    <% for (eventinstance of eventinstances) { %>
      <tr>
        <td class="fw-semibold text-nowrap"><div class="text-danger-emphasis"><%= eventinstance.eventname %></div></td>
        <td class="text-nowrap"><%= eventinstance.eventtype %></td>
        <td scope="row">
          <%= new Date(eventinstance.eventstart).toLocaleDateString() %>
        </td>
        <td scope="row">
          <%= eventinstance.eventlocation %>
        </td>
        <% if (session.person.role ==="admin" ) {%>
          <td>
            <div class="d-flex justify-content-end gap-2">
              <form action="/events/edit/<%= eventinstance.eventid%>/<%= eventinstance.eventstart%>" method="GET">
                <input type="submit" name="edit" value="Edit" class="btn btn-sm btn-outline-secondary" />
              </form>
              <button class="btn btn-sm btn-outline-danger" onclick="deleteevent('<%= eventinstance.eventid %>', '<%= eventinstance.eventstart %>')">Delete</button>
            </div>
          </td>
          
        <%}%>
      </tr>
    <% } %>
  </tbody>
</table>
  </div>
</div>