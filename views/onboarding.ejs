<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Onboarding</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
  <link rel="icon" type="image/x-icon" href="/images/bromunity/favicon.ico">
</head>

<body class="bg-light">
  <div class="container d-flex flex column align-items-center justify-content-center min-vh-100">
    <div class="text-center mb-5">
      <!-- <img src="/images/bromunity/BromunityLogo.svg" class="rounded mx-auto d-block" style="max-height: 300px; max-width: 300px;" alt="Bromunity logo"> -->
      <h1 class="display-4 text-dark mb-3">Ella Rises</h1>
      <p class="text-muted">Fill out your profile information.</p>
      <div class="mx-auto">
        <div class="bg-white p-4 rounded shadow">
          <h3 class="text-center mb-4">Onboarding</h3>
          <% if (errorMessage && errorMessage !== '') { %>
            <div class="alert alert-danger text-center" role="alert" id="errorMessage">
              <%= errorMessage %>
            </div>
          <% } %>
          <form action="/persons/onboarding" method="POST">
            <div class="text-start mb-3">
              <label for="firstName" class="form-label">First Name</label>
              <input type="text" id="firstName" name="firstName" class="form-control" placeholder="Jane" required autofocus>
            </div>
            <div class="text-start mb-3">
              <label for="lastName" class="form-label">Last Name</label>
              <input type="text" id="lastName" name="lastName" class="form-control" placeholder="Smith" required>
            </div>
            <div class="text-start mb-3">
              <label for="dateOfBirth" class="form-label">Date of Birth</label>
              <input type="date" id="dateOfBirth" name="dateOfBirth" class="form-control" required>
            </div>
            <!-- 
              [TODO] Control for user input. Must include hyphens.
            -->
            <div class="text-start mb-3">
              <label for="phone" class="form-label">Phone</label>
              <input type="text" id="phone" name="phone" class="form-control" placeholder="123-456-7890" required>
            </div>
            <div class="text-start mb-3">
              <label for="city" class="form-label">City</label>
              <input type="text" id="city" name="city" class="form-control" placeholder="Provo" required>
            </div>
            <div class="text-start mb-3">
              <label for="state" class="form-label">State</label>
              <select name="state" id="state" required>
                <option value="" disabled selected>Select a state</option>
                <% for (const state of states) { %>
                  <option value="<%= state.state %>"><%= state.state %></option>
                <% } %>
              </select>
            </div>
            <div class="text-start mb-3">
              <label for="zipCode" class="form-label">Zip Code</label>
              <input type="text" id="zipCode" name="zipCode" class="form-control" placeholder="123456" required>
            </div>
            <div class="text-start mb-3">
              <label for="organization" class="form-label">Organization</label>
              <input type="text" id="organization" name="organization" class="form-control" placeholder="Ella Rises" required>
            </div>
            <div class="text-start mb-3">
              <label for="fieldOfInterest" class="form-label">Field of Interest</label>
              <select name="fieldOfInterest" id="fieldOfInterest" required>
                <option value="" disabled selected>Select a field</option>
                <% for (const fieldOfInterest of fieldsOfInterest) { %>
                  <option value="<%= fieldOfInterest.fieldOfInterest %>"><%= fieldOfInterest.fieldOfInterest %></option>
                <% } %>
              </select>
            </div>
            <div class="d-grid">
              <button type="submit" class="btn btn-dark">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>

</html>