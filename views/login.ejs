<!-- This is the login page. A user that already has an account inputs their username and password
 which are checked against those in the database. A session is then created. The user has the option
 to sign up if they haven't already.  -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Signup</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;600;700&family=Great+Vibes&display=swap" rel="stylesheet">
  <link rel="icon" type="image/x-icon" href="/images/bromunity/favicon.ico">
  <style>
    :root{
      --c1: #99B7C6;
      --c2: #978EC4;
      --c3: #F9F5EA;
      --c4: #FFD8D1;
      --c5: #F9AFB1;
      --c6: #9AB59D;
      --c7: #3A3F3B;
      --c8: #F4B092;
      --c9: #CE325B;
      --radius: 14px;
    }

    body{background: linear-gradient(180deg,var(--c3) 0%, rgba(153,183,198,0.06) 100%); color: var(--c7);}
    .site-title{font-family: 'DM Serif Display', serif; font-size: clamp(1.6rem, 3.2vw, 2.6rem); letter-spacing: .6px; color: var(--c2);}
    .auth-card{background: linear-gradient(180deg, rgba(255,216,209,0.9), rgba(249,245,234,0.95)); border-radius: var(--radius); box-shadow: 0 8px 30px rgba(58,63,59,0.12); border: 1px solid rgba(152,142,196,0.08);}
    .form-label{font-weight:600; color:var(--c7)}
    .btn-primary-custom{background: linear-gradient(90deg,var(--c2),var(--c9)); border: none; color: white; font-weight:700; border-radius: 10px; padding: .65rem 1.25rem}
    .tiny-muted{font-size:.9rem; color: rgba(58,63,59,0.65)}

  html, body {
    height: 100%;
  }

  </style>
</head>

<body>
  <!-- Brings in the navbar from the components directory -->
  <%- include('components/navbar') %>
  <div style = "font-family: 'Montserrat', system-ui, -apple-system, 'Segoe UI', Roboto, 'Helvetica Neue', Arial;">
    <div class="container py-5">
      <div class="row justify-content-center align-items-center">
        <div class="col-md-8 col-lg-6">

          <div class="auth-card p-4 p-md-5 mx-auto" style="max-width:720px;">
            <div class="text-center mb-3">
              <h2 style="font-family:'DM Serif Display',serif; color:var(--c2);">Login</h2>
              <p class="tiny-muted">We're glad you're here - sign in to continue.</p>
            </div>

            <div class="mx-auto">
              <% if (errorMessage && errorMessage !== '') { %>
                <div class="alert alert-danger text-center" role="alert" id="errorMessage">
                  <%= errorMessage %>
                </div>
              <% } %>
              <!-- The form where the user signs in  -->
              <form action="/persons/login" method="POST">
                

                <div class="mb-3">
                  <label for="email" class="form-label" autofocus>Email</label>
                  <input type="email" id="email" name="email" class="form-control" placeholder="example@email.com" required autofocus>
                </div>

                <div class="mb-3">
                  <label for="password" class="form-label">Password</label>
                  <input type="password" id="password" name="password" class="form-control" required>
                </div>

                <div class="d-grid mb-2">
                  <button type="submit" class="btn btn-lg text-white" style="background-color: #F9AFB1; border-color: #F9AFB1;">Login</button>
                </div>
<!-- Where the user can sign up if they haven't -->
                <div class="text-center">
                  <p class="tiny-muted mb-0">Don't have an account? <a href="/persons/signup" style="color:var(--c2); font-weight:600; text-decoration:none;">Sign Up</a></p>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Another I'm a teapot! -->
    <div style="bottom:0; width:100%; background:transparent;">
      <center><p>&copy; 2025 Bromunity Studios <a href="/eggs/teapot" style="text-decoration:none; color:var(--c7);">â˜•</a></p></center>
    </div>
  </div>
</body>

</html>